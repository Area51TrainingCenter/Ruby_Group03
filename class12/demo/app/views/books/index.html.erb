<marquee><h1>Bienvenido a la biblioteca</h1>
</marquee>

<div>
  <%= form_tag search_books_path do %>
    <%= text_field_tag "terms" %>
    <%= submit_tag "Buscar" %>
  <% end %>
</div>

<%= link_to "Amazon", bookstore_path %>
<%= link_to "Amazon", bookstore_url %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <a href="http://google.com">google.com</a>
  <%= link_to "google.com", "http://google.com" %>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.published_at %></td>
        <td><%= link_to 'Ver', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear algo', new_book_path %>
